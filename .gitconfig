[alias]
	#Log
		ls = log --graph --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=local
		ll = log --graph --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat --date=local
		lsr = log --graph --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative

	#various
		st = status -s
		stf = status
		co = checkout
		cob = checkout -b
		lsf = ls-files
	
	#staging/unstagin
		addall = !git add -A
		unstage = reset HEAD --
	#commiting
		
		cm = commit -m 
		cam = !"git addall && git commit -m"
		amend = commit --amend --reuse-message=HEAD
    
    #diffing
		d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
		df = diff --color --abbrev
		wd = diff --color --color-words --abbrev
	
	#testing
	
	#functions
		#find a commit by its commit message
		cbym = "!f() { \
			git ls --grep=\"$1\"; \
		}; f"
		

	aliases = "!git config -l | grep alias | cut -c 7-"


#Color settings
[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = red

[merge]
    log = true
    ff = false
    
[push]
    # push will only do the current branch, not all branches
    default = current
    
